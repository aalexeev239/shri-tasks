body
html
  margin 0
  padding 0
  width 100%
  height 100%
  min-width $container_min

.page-wrapper
  width 100%
  height 100%
  display table
  overflow hidden

.page-header
.page-footer
  display table-row
  height 1px

.page-content
  display table
  width 100%
  height 100%
  table-layout fixed

.container
  min-width $container_min
  max-width $container_max
  margin-left auto
  margin-right auto

  if ($desk_offset)
    padding-left $desk_offset
    padding-right $desk_offset

  @media $port
    padding-left 0
    padding-right 0

