.player
  position relative
  width 400px

  &__controls
    text-align center




  &__control
    display inline-block
    vertical-align top
    padding 20px
    border 1px solid #000
    margin 0 10px


  &__upload
    display block
    position relative

    input
      position absolute
      opacity 0
      z-index -1
      left 0
      top 0

  &__dropzone
    display block
    border 1px dashed #000
    display table
    width 100%
    height 200px
    text-align center

    &-text
      display table-cell
      vertical-align middle
      padding 20px

  &__list
    @extends .clearlist
    margin 20px 0

    li
      display block
      padding 5px 20px
      color $c_base
      cursor pointer
      background #fafafa
      text-align center

      &:hover
        color #000

      & + li
        margin-top 10px

      &.active
        color #000
