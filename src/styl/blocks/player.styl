.player
  position relative
  width 400px

  &.disabled &__control
    opacity .3
    pointer-events none

  &__canvas
    width 100%
    height 120px

  &__controls
    text-align center
    padding 40px 0

  &__control
    @extends .text-hide
    display inline-block
    vertical-align top
    padding 10px
    margin 0 30px
    opacity .6
    transition opacity time

    &:hover
      opacity 1

    &:active
      opacity .3


  &__upload
    display block
    position relative

    input
      position absolute
      opacity 0
      z-index -1
      left 0
      top 0

  &__dropzone
    display block
    border 1px dashed #000
    display table
    width 100%
    height 180px
    text-align center

    &-text
      display table-cell
      vertical-align middle
      padding 20px

  &__list
    @extends .clearlist
    margin 20px 0

    li
      display block
      position relative
      padding 8px 30px
      color $c_base
      cursor pointer
      background #fafafa
      text-align center
      border 1px solid $bd_gray

      &:before
        content ''
        position absolute
        css-triangle(6px, #000, right)
        left 10px
        top 50%
        margin-top -6px
        opacity 0
        transition opacity .2s

      &:hover
        color #000

        &:before
          opacity .6

      & + li
        margin-top 10px


      &.active
        color #000

        &:before
          opacity 1
