.flights
  overflow hidden
  position relative
  box-shadow 0 0 1px rgba(0,0,0,.2)


  &__table
    width 100%
    overflow hidden

  &__caption
    font-size 30px
    padding 20px 0
    margin 0
    text-align center
    background #fff

  thead
    background #fff

  th
  td
    text-align left
    position relative



  // columnn highlighting
  td
  th
    position relative

    &:hover
      &:after
        content ''
        position absolute
        box-shadow 0 0 0 1px #434343
        left 0
        right 0
        top -5000px
        height 10000px
        z-index 10
        pointer-events none

  // ie10- doesn't support pointer events
  .lte-ie9 &
  .no-js &
  .ie10 &
    &:after
      display none

  th
    padding 16px 12px

  tbody
    overflow hidden
    tr
      position relative

      // background-color #fff

      &:nth-child(odd)
        td
          background #fafafa

      &:hover
        td
          box-shadow 0 1px 0 #434343, inset 0 1px 0 #434343









  // overriding default layout
  &__cell
    padding 8px 12px


    &--type
      width 40px

    &--time
      width 60px

    &--comment
      width 220px



  &__type
    @extends .text-hide


  &__company-logo
    display inline-block
    vertical-align middle
    width 40px
    height 40px
    overflow hidden
    text-decoration none
    margin-right 8px

  &__company
    display inline-block
    vertical-align middle
    max-width 140px

  &__comment
    font-size 12px
    line-height 1
    color $c_muted
