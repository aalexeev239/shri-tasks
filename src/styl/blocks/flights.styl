/*=========================================
=            CHECKBOX TOGGLING            =
=========================================*/

// combined with "not" to provide easily removing this functionality
#flights-sort-a:not(:checked) ~ .flights__table tr[data-type="ARRIVAL"]
  display none

#flights-sort-d:not(:checked) ~ .flights__table tr[data-type="DEPARTURE"]
  display none

#flights-sort-a:not(:checked) ~ #flights-sort-d:not(:checked) ~ .flights__table
  .flights__cell--nothing
    display table-cell

  .flights__cell--footer
    display none

/*-----  End of CHECKBOX TOGGLING  ------*/




.flights
  position relative


  /*===========================================
  =                MAIN TABLE                 =
  ===========================================*/
  &--main
    text-align center

    // highlighting
    thead
    tfoot
      background #fff

    // columnn highlighting
    td
      position relative

      &:hover
        &:after
          content ''
          position absolute
          box-shadow 0 0 0 1px #434343
          left 0
          right 0
          top -5000px
          height 10000px
          z-index $z_flights
          pointer-events none

    // ie10- doesn't support pointer events
    .lte-ie9 &
    .no-js &
    .ie10 &
      &:after
        display none


    // row highlighting
    tbody
      tr
        position relative
        background-color #fff

        &:first-child
          td
            border-top none

        &:nth-child(odd)
          td
            background #fafafa

        &:hover
          td
            box-shadow inset 0 1px 0 #434343
            border-bottom-color #434343


  &--main &
    &__table
      text-align left
      width 100%
      margin-top 25px
      box-shadow 0 0 1px rgba(0,0,0,.2)
      overflow hidden
      position relative
      border-collapse separate


    &__type
      @extends .text-hide

      .icon
        position relative
        bottom 2px
  /*-----  End of MAIN TABLE  ------*/


  /*===================================
  =            POPUP TABLE            =
  ===================================*/

  &--popup
    .icon
      display none

    th
    td
      border none
      padding 8px 16px
      width 250px

    th
      text-align right

    td
      text-align left

  &--popup &

    &__table
      margin 0 auto
      table-layout fixed


  /*-----  End of POPUP TABLE  ------*/






  &__caption
    @extends .h1
    padding 20px 0
    margin 0
    text-align center
    background #fff
    user-select none




  &__head-cell
    display table-cell
    padding 16px 12px
    text-align left
    font-weight 700
    border-bottom 1px solid $bd_gray
    background #fff
    position relative
    z-index $z_flights + 10




  // overriding default layout
  &__cell
    padding 8px 12px

    &--type
      width 40px

    &--time
      width 60px

    &--comment
      width 220px

    &--company
      white-space nowrap

    &--footer
      position relative
      z-index $z_flights + 10
      background #fff

    &--nothing
      padding-top 18px
      padding-bottom 17px
      text-align center
      display none


  &__company-logo
    display inline-block
    vertical-align middle
    width 40px
    height 40px
    overflow hidden
    text-decoration none
    margin-right 8px

  &__company
    display inline-block
    vertical-align middle
    max-width 140px
    white-space normal

  &__comment
    display block
    font-size $fz_small
    line-height 1.2
    color $c_muted

  &__link-more
    @extends .td-reverse
    display block
    text-align center
    padding 8px
    font-size 16px


  &__fixed
    display table
    table-layout fixed
    width 100%
    position fixed
    top 0
    left 0
    right 0
    z-index $z_flights + 20
    min-width $container_min
    max-width $container_max
    padding-left $desk_offset
    padding-right $desk_offset
    margin-left auto
    margin-right auto
    display none

    &.active
      display block


@media (max-width: 999px)
  .flights
    position relative

    &--main &

      &__company
        display none

      &__comment
        font-size ($fz_small - 2)
        line-height 1



    &__cell
      &--company
        text-align center

      &--comment
        width 180px





@media (max-width: 899px)
  .flights
    &--main &
      &__cell
        &--point
        &--airship
          width 80px
          text-align center

      &__airship
        font-size 0

        &:before
          content attr(data-short)
          font-size $fz_base

      &__point
        font-size 0

        &:before
          content attr(data-point)
          font-size $fz_base

